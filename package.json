{
  "name": "weer-bundler",
  "version": "0.0.0",
  "description": "Error reporter for web extensions",
  "main": "./dist/cjs/",
  "module": "./dist/esm/",
  "scripts": {
    "lint-src": "eslint ./src/**/*.js --ignore-pattern vendor",
    "lint-examples": "eslint ./examples/src/**/*.js --ignore-pattern vendor",
    "lint": "npm run lint-src",
    "prebuild": "cd ./src && npm install",
    "build": "shx rm -rf ./dist && rollup -c && shx cp ./src/package.json ./dist/.",
    "check": "flow status",
    "start-flow": "flow server",
    "forever-flow": "flow stop && forever start -c \"npm run start-flow\" ./",
    "start": "flow status && npm run build:dev",
    "prod": "flow status && npm run build:prod",
    "test:unit": "karma start karma.conf.js",
    "test:dev": "karma start --single-run --browsers ChromeHeadless karma.conf.js",
    "test:unit:all": "for t in ./test/unit/*; do env TEST_TARGET=`basename $t` npm run test:unit --silent || exit 1; done",
    "test": "npm run test:unit:all --silent"
  },
  "author": "Ilya Ig. Petrov <ilyaigpetrov@gmail.com>, (https://git.io/ilyaigpetrov)",
  "license": "GPL-3.0+",
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "chai": "^4.1.0",
    "eslint": "^4.3.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "karma": "^1.7.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.0.1",
    "karma-mocha": "^1.3.0",
    "mocha": "^3.5.0",
    "rollup": "^0.45.2",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "shx": "^0.2.2",
    "sinon": "^3.0.0",
    "sinon-chrome": "^2.2.1"
  },
  "dependencies": {}
}
