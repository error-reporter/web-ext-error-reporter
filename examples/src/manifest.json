{

  "manifest_version": 2,

  "name": "Weer Test",
  "description": "Blow up internet!",
  "version": "0.0.0.1",
  "author": "homerjsimpson@example.com",
  "homepage_url": "https://cool-extension.example.com",

  "permissions": [
    "notifications"
